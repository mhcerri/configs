# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[capslock]
instance=CAPS
command=$HOME/.i3/scripts/keyindicator
interval=1
signal=11
separator=false

[numlock]
instance=NUM
command=$HOME/.i3/scripts/keyindicator
interval=1
signal=11

[disk-root]
label=/
instance=/
command=/usr/lib/i3blocks/disk
interval=30

[disk-home]
label=/home
instance=/home/
command=/usr/lib/i3blocks/disk
interval=30

[wireless]
label=W
instance=wlan0
#command=/usr/lib/i3blocks/network
command=$HOME/.i3/scripts/network '#555555'
color=#FFFFFF
interval=10

[ethernet]
label=E
instance=eth0,enp0s3
#command=/usr/lib/i3blocks/network
command=$HOME/.i3/scripts/network '#555555'
color=#FFFFFF
interval=10

[memory]
label=MEM
command=/usr/lib/i3blocks/memory
interval=30
separator=false

[swap]
label=SWAP
instance=swap
command=/usr/lib/i3blocks/memory
interval=30

[cpu]
label=CPU
command=$HOME/.i3/scripts/cpu_usage -f '% 6.2f%%'
interval=10
separator=false

[load]
command=/usr/lib/i3blocks/load_average
interval=10
separator=false

[temperature]
command=echo "$(sensors coretemp-isa-0000 | awk '/Physical/ { gsub(/^\+/, "", $4); print $4 }')"
interval=30

[battery]
label=⚡
command=/usr/lib/i3blocks/battery
interval=30

[volume]
label=♪
instance=Master
command=/usr/lib/i3blocks/volume
interval=once
signal=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5
